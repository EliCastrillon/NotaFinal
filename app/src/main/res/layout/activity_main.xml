<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenyellow"
    android:orientation="vertical"
    tools:context="com.elicastrillon.notafinal.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.37"
            android:text="Nota Avance 1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/eAvance1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.84"
            android:inputType="numberDecimal"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.37"
            android:layout_height="match_parent"
            android:text="Nota Avance 2"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:inputType="numberDecimal"
            android:layout_weight="1.84"
            android:id="@+id/eAvance2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.37"
            android:layout_height="match_parent"
            android:text="Nota Proyecto"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/eProyecto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.84"
            android:inputType="numberDecimal"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.37"
            android:text="Nota AplicaciÃ³n Final"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:inputType="numberDecimal"
            android:layout_weight="1.84"
            android:id="@+id/eAppFinal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.37"
            android:layout_height="match_parent"
            android:text="Nota Practicas"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:inputType="numberDecimal"
            android:layout_weight="1.84"
            android:id="@+id/ePracticas"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/eCalcular"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Calcular Nota Final"
            android:textColor="@color/black"

            />

        <Button
            android:id="@+id/eLimpiar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Limpiar Campos"
            android:textColor="@color/black"

            />

        <Button
            android:id="@+id/eSalir"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:textColor="@color/black"

        />
    </LinearLayout>

</LinearLayout>